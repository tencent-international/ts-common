{
  "git": {
    "commit": true,
    "tag": true,
    "push": false
  },
  "github": {
    "release": true,
    "assets": "dist/*"
  },
  "npm": {
    "publish": true,
    "skipChecks": true
  },
  "plugins": {
    "@release-it/bumper": {
      "infile": "package.json"
    }
  },
  "increment": "patch"
}